{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom","esnext"],
    "esModuleInterop": true,
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}